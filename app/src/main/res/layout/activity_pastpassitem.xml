<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_pastpassitem_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

  <androidx.cardview.widget.CardView
      android:id="@+id/card_past_ticket"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:layout_marginStart="@dimen/standard_16"
      android:layout_marginTop="@dimen/standard_8"
      android:layout_marginEnd="@dimen/standard_16"
      app:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/rv_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/standard_16"
        android:paddingEnd="@dimen/standard_16"
        android:paddingBottom="@dimen/standard_16"
        android:visibility="visible">

      <TextView
          android:id="@+id/tv_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_marginTop="@dimen/standard_16"
          android:fontFamily="@font/inter_regular"
          android:text="DTC Daily Pass"
          android:textColor="@color/black"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/tv_pass_type"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_marginTop="@dimen/standard_12"
          android:layout_marginEnd="@dimen/standard_16"
          android:background="@drawable/default_border_ac"
          android:fontFamily="@font/inter_regular"
          android:paddingStart="@dimen/standard_8"
          android:paddingTop="4dp"
          android:paddingEnd="@dimen/standard_8"
          android:paddingBottom="4dp"
          android:text="AC"
          android:textColor="@color/white"
          android:textSize="14sp" />

      <TextView
          android:id="@+id/tv_bookingTimepast"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv_1"
          android:layout_alignParentStart="true"
          android:layout_marginTop="10dp"
          android:fontFamily="@font/inter_regular"
          android:text="09-03-2002 | 09:03:02"
          android:textColor="@color/black"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/tv_totalFare"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv_pass_type"
          android:layout_alignParentEnd="true"
          android:layout_marginTop="10dp"
          android:fontFamily="@font/inter_regular"
          android:text="â‚¹50.0"
          android:textColor="@color/black"
          android:textSize="18sp" />

      <TextView
          android:id="@+id/tv_passIDpast"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv_totalFare"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="10dp"
          android:text="DP0903200245678jhg5678"
          android:fontFamily="@font/inter_regular"
          android:textColor="@color/black"
          android:textSize="14sp" />
    </RelativeLayout>
  </androidx.cardview.widget.CardView>
</RelativeLayout>
